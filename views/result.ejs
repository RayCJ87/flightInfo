    </head>

    <body>
        <div>
            <span> Departure:  <%= flightData.departure.iataCode%></span></br>
            <span> Arrival:  <%= flightData.arrival.iataCode%></span></br>
            <span> Status:  <%= flightData.status%></span>
        </div>

        <div>
            <table>
                <tr>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Altitude</th>
                </tr>
                <tr>
                    <th id='flat'><%= flightData.geography.latitude%></th>
                    <th id='flong'><%= flightData.geography.longitude%></th>
                    <th><%= flightData.geography.altitude%></th>
                </tr>
            </table>
        </div>

        <div id="map"></div>
        <script>
            function initMap(){
                let thePlane = {lat: parseInt(document.getElementById('flat').innerHTML), lng: parseInt(document.getElementById('flong').innerHTML) }
                // The map is centered at the plane
                console.log(thePlane);
                console.log(document.getElementById('flat').innerHTML)
                console.log(typeof(document.getElementById('flat').innerHTML));
                let map = new google.maps.Map(
                    document.getElementById('map'), {zoom: 4, center: thePlane}
                );
                // the marker is positioned at the plane
                let marker = new google.maps.Marker({position: thePlane, map: map});
            }

        </script>

        <!-- load API from the URL -->
        <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDbiqvTyWa2FXPnu9EetqBHqHAyZRlv_j0&callback=initMap"  type="text/javascript">
        </script>

    </body>

